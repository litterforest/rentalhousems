<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cobee.rentalhousems.dao.impl.BaseUserMapper">
	
	<select id="list" resultType="BaseUser" >
	
		select a.* from base_user a 
		where a.del_flag = 0
		
		<if test="username != null" >
			and a.username = #{username}
		</if>
	
	</select>
	
	<select id="get" resultType="BaseUser" parameterType="integer" >
	
		select a.* from base_user a where a.id = #{id}
		
	</select>
	
	<update id="delete" parameterType="integer" >
	
		delete from base_user where id = #{id}
		
	</update>
	
	<update id="deleteByLogic" parameterType="integer" >
	
		update base_user set del_flag = 1 where id = #{id} 
		
	</update>
	
	<update id="insertBySelective" parameterType="BaseUser">
		
		insert into base_user
		(
			<trim suffixOverrides=",">
				<if test="createDate != null">
					create_date,
				</if>
				<if test="createBy != null">
					create_by,
				</if>
				<if test="updateDate != null">
					update_date,
				</if>
				<if test="updateBy != null">
					update_by,
				</if>
				<if test="remarks != null">
					remarks,
				</if>
				<if test="username != null">
					username,
				</if>
				<if test="password != null">
					password,
				</if>
				<if test="mobile != null">
					mobile,
				</if>
				
			</trim>
		) values (
			<trim suffixOverrides=",">
				<if test="createDate != null">
					#{createDate},
				</if>
				<if test="createBy != null">
					#{createBy},
				</if>
				<if test="updateDate != null">
					#{updateDate},
				</if>
				<if test="updateBy != null">
					#{updateBy},
				</if>
				<if test="remarks != null">
					#{remarks},
				</if>
				<if test="username != null">
					#{username},
				</if>
				<if test="password != null">
					#{password},
				</if>
				<if test="mobile != null">
					#{mobile},
				</if>
			</trim>
		)
	
	</update>
	
	<update id="updateBySelective" parameterType="BaseUser">
		
		update base_user set 
		
		<trim suffixOverrides=",">
				<if test="createDate != null">
					create_date = #{createDate},
				</if>
				<if test="createBy != null">
					create_by = #{createBy},
				</if>
				<if test="updateDate != null">
					update_date = #{updateDate},
				</if>
				<if test="updateBy != null">
					update_by = #{updateBy},
				</if>
				<if test="remarks != null">
					remarks = #{remarks},
				</if>
				<if test="username != null">
					username = #{username},
				</if>
				<if test="password != null">
					password = #{password},
				</if>
				<if test="mobile != null">
					mobile = #{mobile},
				</if>
			</trim>
		
		where id = #{id}
	
	</update>
	
	
</mapper>